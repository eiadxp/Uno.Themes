<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:converters="using:Uno.Material.Converters"
					xmlns:controls="using:Uno.Material.Controls"
					xmlns:toolkit="using:Uno.UI.Toolkit">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="../Application/Colors.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<ResourceDictionary.ThemeDictionaries>
		<ResourceDictionary x:Key="Default">
			<SolidColorBrush x:Key="SystemControlHighlightAccentBrush"
							 Color="{StaticResource MaterialPrimaryColor}" />
		</ResourceDictionary>
		<ResourceDictionary x:Key="Dark">
			<SolidColorBrush x:Key="SystemControlHighlightAccentBrush"
							 Color="{StaticResource MaterialPrimaryColor}" />
		</ResourceDictionary>
		<ResourceDictionary x:Key="Light">
			<SolidColorBrush x:Key="SystemControlHighlightAccentBrush"
							 Color="{StaticResource MaterialPrimaryColor}" />
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>

	<Style x:Key="MaterialCalendarViewStyle"
		   TargetType="CalendarView">
		<Setter Property="FocusBorderBrush"
				Value="{StaticResource MaterialPrimaryFocusedBrush}" />
		<Setter Property="SelectedHoverBorderBrush"
				Value="{StaticResource MaterialPrimaryBrush}" />
		<Setter Property="SelectedPressedBorderBrush"
				Value="{StaticResource MaterialPrimaryBrush}" />
		<Setter Property="SelectedBorderBrush"
				Value="{StaticResource MaterialPrimaryBrush}" />
		<Setter Property="PressedBorderBrush"
				Value="{StaticResource MaterialPrimaryBrush}" />
		<Setter Property="Background"
				Value="{StaticResource MaterialPrimaryBrush}" />
	</Style>
</ResourceDictionary>
